---
layout: layouts/main.liquid
---

<h2>{{title}}</h2>

<section id="grid">
{% for album in albums %}

<a class="card" href="{{album.shareUrl}}">
{% if album.coverPhotoBaseUrl -%}
{%image album.coverPhotoBaseUrl album.title%}
{% endif %}
<footer>

<h3>{{album.title}}</h3>

<div class="photos_count">
<span class="count">{{album.mediaItemsCount}}</span> Fotos
</div>
</footer>
</a>

{% endfor %}
</section>

{{content}}
