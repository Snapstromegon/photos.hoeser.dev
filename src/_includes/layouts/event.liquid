layout: layouts/main.liquid
subpage: true
---

<h2>{{title}}</h2>

{% if photographers %}
<h3>Fotos von</h3>
<div class="photographers">
{%- for photographer in photographers-%}
{% assign headshot = photographer_data[photographer].picture %}
<a href="https://www.instagram.com/{{photographer_data[photographer].instagram }}" target="_blank" referrerPolicy="no-referrer" class="photographer">
{%image headshot photographer%}
<span class="photographer__name">{{photographer_data[photographer].fullName}}</span>
</a>
{%- endfor %}
</div>
{%- endif %}

<section id="grid">
{% for album in albums %}

<a class="card" href="{{album.shareUrl}}">
{% if album.coverPhotoBaseUrl -%}
{%image album.coverPhotoBaseUrl album.title%}
{%image album.coverPhotoBaseUrl album.title%}
{% endif %}
<footer>

<h3>{{album.title}}</h3>

<div class="photos_count">
<span class="count">{{album.mediaItemsCount}}</span> Fotos
</div>
</footer>
</a>

{% endfor %}
</section>

{{content}}
